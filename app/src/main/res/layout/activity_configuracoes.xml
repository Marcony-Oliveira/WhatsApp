<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201E1E"
    tools:context=".activities.ConfiguracoesActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewFotoPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="388dp"
        android:src="@drawable/padrao"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editPerfilNome"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:drawableEnd="@drawable/ic_edit_branco_24dp"
        android:ems="10"
        android:hint="Nome Usuário"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageViewFotoPerfil" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="335dp"
        android:layout_height="104dp"
        android:layout_marginBottom="194dp"
        android:gravity="center"
        android:text="Esee não é seu nome de usuário nem sua senha.\nEsse nome ficará visível para seus contatos do WhatsApp."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPerfilNome"
        app:layout_constraintVertical_bias="0.351" />

    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circleImageViewFotoPerfil"
        app:srcCompat="@drawable/ic_camera_cinza_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>